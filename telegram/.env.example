# Telegram 配置示例文件
# 复制此文件为 .env 并填入实际值

# Telegram Bot Token (从 @BotFather 获取)
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram Chat IDs (多个用逗号分隔)
# 可以是个人 ID、群组 ID 或频道 ID
# 获取方式: 发送消息给 @userinfobot 或 @getmyid_bot
TELEGRAM_CHAT_IDS=123456789,-100123456789

# WebSocket 服务器配置
WS_HOST=localhost
WS_PORT=8765

# 调试模式
DEBUG=false
